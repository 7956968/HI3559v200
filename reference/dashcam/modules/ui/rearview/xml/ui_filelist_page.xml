<?xml version="1.0" encoding="UTF-8"?>
<view
    id="FILELIST_PAGE"
    isusecommonskin="yes">

    <window
        id="FILELIST_PAGE"
        top="0"
        left="0"
        width="1600"
        height="400"
        transparent="yes"
        opacity="255"
        winlevel="0"
        isrelease="yes"
        normalskin="SKIN_SET_WINDOW_SCROLLGRID"
        activeskin="SKIN_SET_WINDOW_SCROLLGRID"
        onshow="PDT_UI_FILELIST_OnShow"
        onhide="PDT_UI_FILELIST_OnHide"
        ontimer="PDT_UI_FILELIST_OnTimer"
        onevent="PDT_UI_FILELIST_OnEvent"
        onkeydown=""
        ongesturefling="PDT_UI_FILELIST_OnGestureFling">


        <groupbox
            id="FILELIST_GROUP_TITLE"
            top="0"
            left="100"
            width="700"
            height="64"
            isrelease="yes"
            normalskin="SKIN_WINDOW_TITLE">

            <button
                id="FILELIST_BUTTON_BACK"
                top="0"
                left="20"
                width="48"
                height="64"
                isrelease="yes"
                normalskin="SKIN_BACK_NORMAL"
                highlightskin="SKIN_BACK_FOCUS"
                activeskin="SKIN_BACK_FOCUS"
                alignment="hcenter|vcenter"
                onkeydown="PDT_UI_FILELIST_OnKeyDown"
                ongesturetap="PDT_UI_FILELIST_OnGestureTap"/>
            <image
                id="FILELIST_IMAGE_DROP_DOWN"
                top="50"
                left="276"
                width="32"
                height="12"
                isrelease="yes"
                alignment="hcenter|vcenter"
                normalskin="SKIN_DROP_DOWN"/>

            <button
                id="FILELIST_BUTTON_DIRECTORY"
                top="0"
                left="140"
                width="320"
                height="64"
                font="FONT32"
                isrelease="yes"
                transparent="yes"
                text="STRING_DIRECTORY"
                alignment="hcenter|vcenter"
                normalskin="SKIN_WINDOW_TITLE"
                activeskin="SKIN_WINDOW_TITLE_ACTIVE"
                onkeydown="PDT_UI_FILELIST_OnKeyDown"
                ongesturetap="PDT_UI_FILELIST_OnGestureTap"/>

            <button
                id="FILELIST_BUTTON_SELECT_ALL"
                top="0"
                left="572"
                width="64"
                height="64"
                isrelease="yes"
                normalskin="SKIN_SELECT_ALL_NORMAL"
                highlightskin="SKIN_SELECT_ALL_FOCUS"
                activeskin="SKIN_SELECT_ALL_FOCUS"
                alignment="hcenter|vcenter"
                onkeydown="PDT_UI_FILELIST_OnKeyDown"
                ongesturetap="PDT_UI_FILELIST_OnGestureTap"/>

            <button
                id="FILELIST_BUTTON_DELETE"
                top="0"
                left="636"
                width="64"
                height="64"
                isrelease="yes"
                normalskin="SKIN_DELETE_NORMAL"
                highlightskin="SKIN_DELETE_FOCUS"
                activeskin="SKIN_DELETE_FOCUS"
                alignment="hcenter|vcenter"
                onkeydown="PDT_UI_FILELIST_OnKeyDown"
                ongesturetap="PDT_UI_FILELIST_OnGestureTap"/>
        </groupbox>

        <label
            id="FILELIST_SCROLLBAR_BG"
            top="64"
            left="786"
            width="14"
            height="400"
            normalskin="SKIN_FILELIST_SCROLLBAR_BG"/>

        <!-- scrollbar -->
        <scrollbar
            id="FILELIST_SCROLLBAR"
            top="68"
            left="789"
            width="8"
            height="328"
            isrelease="yes"
            normalskin="SKIN_SET_SCORLLBAR_BG"
            slidres="SKIN_SET_SCORLLBAR_SLIDER"
            sliddircet="vertical"
            downarrownormal=""
            uparrowpress=""
            downarrowpress=""
            alignment="hcenter|vcenter"
            uparrownormal=""/>

        <scrollgrid
            id="FILELIST_SCROLLGRID_FILES"
            top="64"
            left="100"
            width="686"
            height="336"
            isrelease="yes"
            transparent="no"
            normalskin="SKIN_FILELIST_SCROLLGRID"
            activeskin="SKIN_FILELIST_SCROLLGRID"
            font="FONT32"
            widgetposmirror="no"
            widgetinteriormirror="no"
            rownum="2"
            colnum="3"
            cellcolnum="4"
            topmargin="0"
            leftmargin="0"
            rightmargin="0"
            bottommargin="0"
            rowspace="4"
            colspace="4"
            datamodel="DATAMODEL_FILELIST"
            scrollbar="FILELIST_SCROLLBAR"
            focusnormskin=""
            focusactiveskin=""
            itemdirection="vertical"
            iteminterval="50"
            itemsteps="4"
            focusinterval="50"
            focussteps="20"
            isfocusatbg="no"
            focusanchor="0"
            imgdecindex="1"
            isdynamicdecimg="no"
            alignment="hcenter|vcenter"
            onkeydown="PDT_UI_FILELIST_OnKeyDown"
            oncellcolselect="PDT_UI_FILELIST_GRID_OnCellColSelect"
            onfocusmove="PDT_UI_FILELIST_GRID_OnFocusMove">

                <scrollgridcol
                    id="FILELIST_GRID_THUMB_VIDEO"
                    colbinddb="yes"
                    coldbindex="0"
                    coltype="memimage"
                    coltop="0"
                    colleft="0"
                    colwidth="224"
                    colheight="166"
                    coldataconv="PDT_UI_FILELIST_GRID_GetVideoThumbnail"/>

                <scrollgridcol
                    id="FILELIST_GRID_THUMB_PHOTO"
                    colbinddb="yes"
                    coldbindex="0"
                    coltype="image"
                    coltop="0"
                    colleft="0"
                    colwidth="224"
                    colheight="166"
                    coldataconv="PDT_UI_FILELIST_GRID_GetPhotoThumbnail"/>

                <scrollgridcol
                    id="FILELIST_GRID_FOCUS"
                    colbinddb="no"
                    coltype="image"
                    coltop="0"
                    colleft="0"
                    colwidth="224"
                    colheight="166"
                    coldataconv="PDT_UI_FILELIST_GRID_GetFocusIcon"/>

                <scrollgridcol
                    id="FILELIST_GRID_SELECT"
                    colbinddb="yes"
                    coldbindex="1"
                    coltype="image"
                    coltop="6"
                    colleft="189"
                    colwidth="32"
                    colheight="32"
                    coldataconv="PDT_UI_FILELIST_GRID_GetSelIcon"/>

        </scrollgrid>
        <groupbox
            id="FILELIST_GROUP_PLAY_WINDOW"
            top="0"
            left="800"
            width="700"
            height="400"
            isrelease="yes"
            transparent="no"
            normalskin="SKIN_PLAYBACK_WINDOW">

            <button
                id="PLAYBACK_BUTTON_INFO"
                top="0"
                left="150"
                width="400"
                height="64"
                font="FONT32"
                isrelease="yes"
                transparent="yes"
                normalskin="SKIN_WINDOW_TITLE"
                alignment="hcenter|vcenter"/>

            <button
                id="PLAYBACK_BUTTON_PLAY"
                top="166"
                left="300"
                width="96"
                height="96"
                isrelease="yes"
                normalskin="SKIN_PLAY_NORMAL"
                activeskin="SKIN_PLAY_NORMAL"
                alignment="hcenter|vcenter"
                onkeydown="PDT_UI_FILELIST_OnKeyDown"
                ongesturetap="PDT_UI_FILELIST_OnGestureTap"/>
        </groupbox>

        <trackbar
            id="PLAYBACK_TRACKBAR_PROGRESS"
            top="350"
            left="802"
            width="696"
            height="50"
            isrelease="yes"
            normalskin="SKIN_PLAYBACK_TRACKBAR_PLAY"
            activeskin="SKIN_PLAYBACK_TRACKBAR_PLAY"
            widgetposmirror="yes"
            widgetinteriormirror="yes"
            isskinforcedraw="yes"
            normaltrack="./res/pic/trackbar_circle.png"
            activetrack="./res/pic/trackbar_circle.png"
            mousedowntrack="./res/pic/trackbar_circle.png"
            slider="./res/pic/trackbar_line.png"
            leftmargin="12"
            rightmargin="12"
            topmargin=""
            bottommargin=""
            style="horizon"
            maxvalue="100"
            minvalue="0"
            step="1"
            ontouchaction="PDT_UI_FILELIST_TRACKBAR_OnTouchAction"
            onmouseout="PDT_UI_FILELIST_TRACKBAR_OnMouseOut"
            onvaluechange="PDT_UI_FILELIST_TRACKBAR_OnValueChange"/>

        <label
            id="FILELIST_LEFT"
            top="0"
            left="0"
            width="100"
            height="400"
            normalskin="SKIN_FILELIST_LEFT"/>


        <label
            id="FILELIST_RIGHT"
            top="0"
            left="1500"
            width="100"
            height="400"
            normalskin="SKIN_FILELIST_RIGHT"/>
    </window>
</view>
